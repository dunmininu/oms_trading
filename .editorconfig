# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# Django template files
[*.html]
indent_size = 2

# JavaScript/TypeScript files
[*.{js,ts,tsx,jsx}]
indent_size = 2

# CSS/SCSS files
[*.{css,scss,sass}]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# XML files
[*.xml]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Configuration files
[*.{toml,ini,cfg}]
indent_size = 4

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Docker files
[{Dockerfile,Dockerfile.*}]
indent_size = 2

# Make files
[{Makefile,*.mk}]
indent_style = tab
indent_size = 4

# Migration files (allow longer lines)
[**/migrations/*.py]
max_line_length = off

# Test files
[test_*.py]
max_line_length = 100

# Specific file overrides
[requirements*.txt]
indent_size = 0

[.env*]
indent_size = 0
